# --------------------------------------------------------------------
# CORE SETTINGS
# --------------------------------------------------------------------
GUFO_ENV=prod               # "dev" | "stage" | "prod" (optional)
GUFO_SERVER_PORT=8090
GUFO_SERVER_GRPC_PORT=4890

# --------------------------------------------------------------------
# SECURITY / AUTH
# --------------------------------------------------------------------
GUFO_SIGN=change-me         # internal signature key
GUFO_JWT_SECRET=jwt-secret  # for token signing

# --------------------------------------------------------------------
# DATABASE
# --------------------------------------------------------------------
GUFO_DB_HOST=db
GUFO_DB_PORT=3306
GUFO_DB_USER=root
GUFO_DB_PASS=your-db-password
GUFO_DB_NAME=gufo
GUFO_DB_TYPE=mysql

# --------------------------------------------------------------------
# EMAIL
# --------------------------------------------------------------------
GUFO_EMAIL_HOST=smtp.example.com
GUFO_EMAIL_PORT=587
GUFO_EMAIL_USER=noreply@example.com
GUFO_EMAIL_PASS=your-email-password
GUFO_EMAIL_SUPPORT=support@example.com

# --------------------------------------------------------------------
# REDIS / CACHE
# --------------------------------------------------------------------
GUFO_REDIS_URL=redis://redis
GUFO_MEMCACHED_HOST=memcached
GUFO_MEMCACHED_PORT=11211

# --------------------------------------------------------------------
# SENTRY / MONITORING
# --------------------------------------------------------------------
GUFO_SENTRY_DSN=https://examplePublicKey@o0.ingest.sentry.io/0
GUFO_SENTRY_ENABLED=false
GUFO_SENTRY_TRACE=1.0
GUFO_OTEL_ENDPOINT=otel-collector:4318
GUFO_OTEL_SERVICE_NAME=gufo-api-gateway

# --------------------------------------------------------------------
# MASTER SERVICE
# --------------------------------------------------------------------
GUFO_MASTER_HOST=masterservice
GUFO_MASTER_PORT=5300
